# Anthropic (Primary LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (Image Generation)
# Required if using IMAGE_GENERATOR=gpt-5
OPENAI_API_KEY=your_openai_api_key_here

# Supabase (Image Storage - optional, defaults to local)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_BUCKET=design-images

# Embedding Configuration (Local HuggingFace - no API key required)
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DIMENSION=384

# Image Generation
IMAGE_GENERATOR=placeholder  # Options: gpt-5, placeholder
# Use gpt-5 for real image generation with OpenAI
# Use placeholder for development/testing (no API calls)

# Image Storage
IMAGE_STORAGE=local  # Options: local, supabase
# Use local for filesystem storage (good for development)
# Use supabase for cloud storage (scalable, CDN-backed)

# App Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
CHROMA_DB_PATH=./chroma_db
DATA_STORAGE_PATH=./data
