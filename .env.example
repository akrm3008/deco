# Anthropic (Primary LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Embeddings (choose one)
VOYAGE_API_KEY=your_voyage_api_key_here
# OR
# OPENAI_API_KEY=your_openai_api_key_here

# Embedding Configuration
EMBEDDING_PROVIDER=voyage  # Options: voyage, openai
EMBEDDING_MODEL=voyage-3  # or "text-embedding-3-small" for OpenAI
EMBEDDING_DIMENSION=1024  # 1024 for Voyage, 1536 for OpenAI

# Image Generation (configure based on chosen service)
IMAGE_GENERATOR=placeholder  # Options: gpt-image-1.5, banana-pro, placeholder
IMAGE_API_KEY=your_image_api_key_here
IMAGE_ENDPOINT=https://api.example.com/generate
IMAGE_MODEL_KEY=your_model_key_here

# App Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
CHROMA_DB_PATH=./chroma_db
DATA_STORAGE_PATH=./data
